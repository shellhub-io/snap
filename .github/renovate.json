{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^snap/snapcraft\\.yaml$"],
      "matchStrings": [
        "source-tag:\\s*v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "shellhub-io/shellhub",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "shellhub-io/shellhub"
      ],
      "enabled": true
    }
  ]
}
